{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://YOUR-BACKEND-URL/api/$1"
    }
  ],
  
  "rewrites": [
    { "source": "/", "destination": "/login" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
